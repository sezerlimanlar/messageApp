<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="top"
    app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_disabled">

    <TextView
        android:id="@+id/txt_item_group"
        android:layout_width="254dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="1dp"
        android:background="@drawable/style"
        android:fontFamily="@font/marko_one"
        android:gravity="center_horizontal|center_vertical"
        android:textAllCaps="false"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_item_groupsil"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginTop="1dp"
        android:layout_marginRight="3dp"
        android:backgroundTint="#2c64c6"
        android:fontFamily="@font/marko_one"
        android:gravity="center_horizontal|center_vertical"
        android:text="SÄ°L"
        android:textColor="#FFFFFF"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:layout_gravity="center|start"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/gruplogo" />
</androidx.cardview.widget.CardView>