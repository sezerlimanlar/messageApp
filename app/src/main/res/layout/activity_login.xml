<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="264dp"
        android:layout_height="321dp"
        android:layout_marginTop="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <EditText
        android:id="@+id/et_log_email"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/style"
        android:drawableStart="@drawable/msgicon"
        android:ems="10"
        android:fontFamily="@font/marko_one"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/et_log_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/marko_one"
        android:text="Password"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/et_log_password"
        app:layout_constraintEnd_toEndOf="@+id/et_log_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_log_password" />

    <Button
        android:id="@+id/btn_log_login"
        android:layout_width="156dp"
        android:layout_height="49dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#2c64c6"
        android:fontFamily="@font/marko_one"
        android:onClick="logClick"
        android:text="LOGIN"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/btn_log_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FFFFFF"
        app:strokeWidth="1dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/marko_one"
        android:text="Email"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/et_log_email"
        app:layout_constraintEnd_toEndOf="@+id/et_log_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_log_email" />

    <EditText
        android:id="@+id/et_log_password"
        android:layout_width="208dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/style"
        android:drawableStart="@drawable/passicon"
        android:ems="10"
        android:fontFamily="@font/marko_one"
        android:hint="Password"
        android:inputType="textPassword"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/btn_log_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_log_signup"
        android:layout_width="156dp"
        android:layout_height="49dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#2c64c6"
        android:fontFamily="@font/marko_one"
        android:onClick="sigClick"
        android:text="SIGN UP"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/marko_one"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marko_one"
        android:text="No account yet?"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/btn_log_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_log_signup" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/marko_one"
        android:text="201913709077 / SEZER LÄ°MANLAR"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>